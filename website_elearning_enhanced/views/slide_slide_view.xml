<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_slide_slide_form" model="ir.ui.view">
        <field name="name">slide.slide.form</field>
        <field name="model">slide.slide</field>
        <field name="inherit_id" ref="website_slides_survey.slide_slide_view_form" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='survey_id']" position="after">
                <field name="survey_id" invisible="slide_category != 'eval_survey'" string="Survey"
                    domain="[('survey_type', '=', 'survey')]" />
            </xpath>
        </field>
    </record>
</odoo>